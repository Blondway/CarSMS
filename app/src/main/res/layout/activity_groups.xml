<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="drabiuk.carsms.Groups">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="545dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dotknij grupę aby edytować."
            android:textColor="@color/colorGray"
            android:id="@+id/textView"
            android:textSize="14sp"
            android:layout_marginTop="5dp" />


        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_below="@+id/textView" />

       <!-- <Button
            android:id="@+id/przycisk_listanumerow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fab_addgroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="Lista Numerów" /> -->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_addgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp"
            android:tint="@android:color/white"
            android:layout_below="@+id/listview1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>